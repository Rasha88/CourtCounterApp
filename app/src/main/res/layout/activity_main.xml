<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/full_bg"
    android:orientation="vertical"
    tools:context="com.example.android.courtcounterapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/team1"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Thunder"/>
            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:padding="15dp"
                android:textSize="36sp"
                android:text="0"
                android:background="#f6f9dad1"
                android:textColor="#fff"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:paddingTop="50dp"
                android:paddingBottom="16dp"
                android:text="VS"
                android:gravity="center_horizontal"
                android:textSize="24sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:text="1:03"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="#f6f9dad1"
                android:textColor="#fff"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/team2"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="sucks"/>
            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textSize="36sp"
                android:text="0"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:background="#f6f9dad1"
                android:textColor="#fff"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/threeForTeamA_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:onClick="addThreeForTeamA"
                android:text="Three ( 0 )"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:background="#cf5b7f"
                android:textColor="#d6d7d7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="55dp"
                android:text="+3"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#d6d7d7"
                android:fontFamily="sans-serif-light"
                android:paddingTop="11dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/i"/>
            <Button
                android:id="@+id/threeForTeamB_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:onClick="addThreeForTeamB"
                android:text="Three ( 0 )"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:background="#cf5b7f"
                android:textColor="#d6d7d7"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/twoForTeamA_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:onClick="addTwoForTeamA"
                android:text="Two ( 0 )"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:background="#cf5b7f"
                android:textColor="#d6d7d7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="55dp"
                android:text="+2"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#d6d7d7"
                android:fontFamily="sans-serif-light"
                android:paddingTop="11dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/i"/>
            <Button
                android:id="@+id/twoForTeamB_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:onClick="addTwoForTeamB"
                android:textStyle="bold"
                android:text="Two ( 0 )"
                android:fontFamily="sans-serif-light"
                android:background="#cf5b7f"
                android:textColor="#d6d7d7"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/freeThrowForTeamA_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:onClick="addOneForTeamA"
                android:text="Free Throw ( 0 )"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:background="#cf5b7f"
                android:textColor="#d6d7d7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="55dp"
                android:text="+1"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textColor="#d6d7d7"
                android:paddingTop="11dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/i"/>
            <Button
                android:id="@+id/freeThrowForTeamB_btn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:onClick="addOneForTeamB"
                android:text="Free Throw ( 0 )"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:background="#cf5b7f"
                android:textColor="#d6d7d7"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="resetScore"
            android:text="Reset"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:background="#cf5b7f"
            android:textColor="#d6d7d7"/>
    </LinearLayout>
</LinearLayout>
